@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>

    }
    <br />
    <div class="form-group">
        <button class="btn btn-success">Değişiklikleri Kaydet</button>        
        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-outline-success">Kullanıcı Listesine Dön</a>
    </div>
</form>

