<div class="tech-btm">

    <p>Teknoloji , Yazılım & Diğer Bloglar </p>
    <form method="post">
        <input type="email" placeholder="Email" required="" name="Mail" id="txtMail">
        <input type="submit" value="Abone Ol" id="btnAboneOl">
    </form>
</div>

<script type="text/javascript">
    $("#btnAboneOl").click(function () {
        let values = {
            Mail: $("#txtMail").val()
        };

        $.ajax({
            type: "post",
            url: "/Newsletter/SubscribeMail/",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>
